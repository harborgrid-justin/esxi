{
  "name": "@meridian/accessibility-lint",
  "version": "0.3.0",
  "description": "Enterprise-grade accessibility linting rules and configurations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "eslint",
    "lint",
    "wcag",
    "aria",
    "enterprise"
  ],
  "author": "Meridian GIS Platform",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/utils": "^6.21.0",
    "@typescript-eslint/experimental-utils": "^5.62.0",
    "aria-query": "^5.3.0",
    "axe-core": "^4.8.3",
    "color-contrast-checker": "^2.1.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1"
  },
  "peerDependencies": {
    "eslint": "^8.0.0",
    "typescript": "^4.9.0 || ^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
