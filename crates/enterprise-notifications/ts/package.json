{
  "name": "@harborgrid/enterprise-notifications",
  "version": "0.4.0",
  "description": "Enterprise Notification & Alerting System with Multi-Channel Delivery",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.js"
    },
    "./engine": {
      "types": "./dist/engine/index.d.ts",
      "import": "./dist/engine/index.mjs",
      "require": "./dist/engine/index.js"
    },
    "./channels": {
      "types": "./dist/channels/index.d.ts",
      "import": "./dist/channels/index.mjs",
      "require": "./dist/channels/index.js"
    },
    "./alerting": {
      "types": "./dist/alerting/index.d.ts",
      "import": "./dist/alerting/index.mjs",
      "require": "./dist/alerting/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.mjs",
      "require": "./dist/services/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "notifications",
    "alerts",
    "alerting",
    "messaging",
    "email",
    "sms",
    "push-notifications",
    "slack",
    "teams",
    "webhooks",
    "escalation",
    "incident-management",
    "on-call",
    "enterprise"
  ],
  "author": "HarborGrid",
  "license": "MIT",
  "dependencies": {
    "nodemailer": "^6.9.7",
    "twilio": "^4.20.0",
    "web-push": "^3.6.6",
    "@slack/web-api": "^6.11.2",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "handlebars": "^4.7.8",
    "mustache": "^4.2.0",
    "markdown-it": "^14.0.0",
    "juice": "^10.0.0",
    "zod": "^3.22.4",
    "date-fns": "^3.0.6",
    "uuid": "^9.0.1",
    "ioredis": "^5.3.2",
    "bull": "^4.12.0",
    "cron": "^3.1.6",
    "luxon": "^3.4.4",
    "node-schedule": "^2.1.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/node-schedule": "^2.1.5",
    "@types/luxon": "^3.3.7",
    "@types/mustache": "^4.2.5",
    "@types/markdown-it": "^13.0.7",
    "@types/juice": "^0.0.36",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/ui": "^1.1.3",
    "eslint": "^8.56.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
